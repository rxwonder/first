    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "SFML Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gcc",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gcc.exe", // Adjust this path to your gcc debugger
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gcc",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            
        }
    ]
}